pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Test unities') {
            steps {
                bat 'npm test'
            }
        }
        stage('Docker image compose'){
            steps{
                bat 'docker build -t cicdexemplerelact:latest .'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // DÃ©ployez votre application sur Minikube
                    bat 'kubectl apply -f k8s-deployment-dev.yaml'
                }
            }
        }

    }

}


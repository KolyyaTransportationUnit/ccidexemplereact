pipeline {
    agent any 

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Push Docker Image') {
            steps {
                // Vos Ã©tapes pour construire et pousser l'image Docker
                bat 'docker build -t cicdexemplerelact:latest .'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                // Utilisez 'kubectl' pour dÃ©ployer sur Minikube
                bat '''
                kubectl apply -f deployment.yaml
                '''
            }
        }
    }
}
